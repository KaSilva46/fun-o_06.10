 def vogais_aeiou(aeiou):
    cont=0
    vogal='aeiou'
    for c in aeiou:
        if c in vogal:
         cont+=1
    print(cont)

def trescoracoes(quantidade_cafe,valor_cafe):

    custo=quantidade_cafe*valor_cafe
    print(f'a custo total de {quantidade_cafe} cafes é: {custo}')
    return custo'''

def condicao(pri):

     if pri>0:
      pri="p"
     elif pri<0:
      pri="n"
     else:
      pri="z"
     return pri

def deposito(merc,prco):
 produto=[]
 valor=[]

 produto.append(merc)
 valor.append(prco)
 
 #main
 
 
while True:
    name=str(input("digite o nome do produto: "))
    preco=float(input("digite o valor: "))
    deposito(name,preco)
    rest=str(input("deseja continuar? sim ou não?"))
    if rest=='não':
        print("o código acabou")
    break
